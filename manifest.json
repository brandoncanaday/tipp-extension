{
  "manifest_version": 2,
  "name": "Tipp",
  "description": "Allows your YouTube audience to make donations without ever leaving your video.",
  "version": "0.1.0",
  "icons": {
    "16": "img/tipp_48x48.png",
    "48": "img/tipp_48x48.png",
    "128": "img/tipp_128x128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "img/tipp_48x48.png",
      "48": "img/tipp_48x48.png",
      "128": "img/tipp_128x128.png"
    },
    "default_popup": "splash.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "css": [
        "css/content_script.css"
      ],
      "js": [
        "js/content_script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/jquery-3.2.1.min.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "identity",
    "notifications",
    "https://connect.stripe.com/*",
    "https://checkout.stripe.com/*",
    "https://tippextension.com/*",
    "https://staging.tippextension.com/*",
    "https://www.youtube.com/*"
  ],
  "web_accessible_resources": [
    "fonts/*",
    "img/*"
  ]
}
